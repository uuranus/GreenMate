<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addGreenMate.login.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/loginImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/login_activity_padding"
            android:src="@drawable/image_login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/greenMateTextView"
            style="@style/Style.GreenMate.Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그린메이트"
            android:textColor="@color/accent_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginImageView" />

        <TextView
            android:id="@+id/infoTextOneTextView"
            style="@style/Style.GreenMate.Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="괜찮아 다 털어놔도 돼!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/greenMateTextView" />

        <TextView
            android:id="@+id/infoTextTwoTextView"
            style="@style/Style.GreenMate.Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우리집의 새로운 식물 친구 그린메이트"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoTextOneTextView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/kakaoLoginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="37dp"
            android:layout_marginTop="22dp"
            app:icon="@drawable/icon_phone"
            app:iconTint="@color/white"
            android:text="카카오톡으로 계속하기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoTextTwoTextView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleLoginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="37dp"
            android:layout_marginTop="20dp"
            app:icon="@drawable/icon_phone"
            app:iconTint="@color/white"
            android:text="구글로 계속하기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kakaoLoginButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/phoneLoginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="37dp"
            android:layout_marginTop="20dp"
            android:text="전화번호로 계속하기"
            app:icon="@drawable/icon_phone"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/googleLoginButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>