<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:includeFontPadding">false</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.GreenMate.MaterialAlertDialog
        </item>
        <item name="toolbarStyle">@style/Widget.GreenMate.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.GreenMate.Button</item>
    </style>

    <style name="Theme.GreenMate.TransparentActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- ThemeOverlay -->
    <style name="ThemeOverlay.GreenMate.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.GreenMate</item>
    </style>

    <style name="ThemeOverlay.GreenMate.Toolbar" parent="">
        <item name="colorPrimary">@color/background_color</item>
    </style>

    <style name="ThemeOverlay.GreenMate.Button" parent="">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>