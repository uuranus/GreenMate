<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.GreenMate.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:backgroundTint">@color/disabled_color</item>
        <item name="minHeight">10dp</item>
    </style>

    <style name="Widget.GreenMate.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">5dp</item>
    </style>

    <style name="Widget.GreenMate.IconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/background_circle_img</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Dialog -->
    <style name="MaterialAlertDialog.GreenMate" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.GreenMate.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.GreenMate.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- toolbar -->
    <style name="Widget.GreenMate.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.GreenMate.Toolbar</item>
        <item name="titleTextAppearance">@style/Style.GreenMate.Text.Bold</item>
        <item name="android:navigationIcon">@drawable/icon_back_arrow</item>
    </style>

</resources>