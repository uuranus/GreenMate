<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.GreenMate.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:backgroundTint">@color/disabled_color</item>
        <item name="minHeight">10dp</item>
    </style>

    <style name="Widget.GreenMate.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">5dp</item>
    </style>

    <!-- Button -->
    <style name="Widget.GreenMate.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.GreenMate.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.GreenMate.Button</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:padding">16dp</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.GreenMate.IconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/background_circle_img</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Dialog -->
    <style name="MaterialAlertDialog.GreenMate" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.GreenMate.MediumComponent</item>
    </style>

    <!-- toolbar -->
    <style name="Widget.GreenMate.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.GreenMate.Toolbar</item>
        <item name="titleTextAppearance">@style/Style.GreenMate.Text.Bold</item>
    </style>

    <!-- shapeAppearance -->
    <style name="ShapeAppearance.GreenMate.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ShapeAppearance.GreenMate.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- textAppearance -->
    <style name="TextAppearance.GreenMate.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/apple_sd_gothic_neo_bold</item>
        <item name="android:fontFamily">@font/apple_sd_gothic_neo_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.GreenMate.Button</item>
    </style>

</resources>