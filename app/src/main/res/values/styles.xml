<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.GreenMate.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/progress_activate_color</item>
        <item name="android:backgroundTint">@color/disabled_color</item>
        <item name="minHeight">10dp</item>
    </style>

    <style name="Widget.GreenMate.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">5dp</item>
    </style>

    <style name="TextAppearance.GreenMate.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.GreenMate.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>